<%= action = (@album.persisted? ? album_url(@album.id) : new_album_url ) %>
<%= method = (@album.persisted? ? "PATCH" : "POST") %>

<form action="<%= action %>" method="POST">
  <input type="hidden" name="_method" value="<%= method %>">
  <label for="band_name"></label>
  <selected name="album[band_id]" id="band_name">
    <option></option>
    <% Bands.all.each do |band| %>
    <option
    <%= album.band_id == band.id ? "selected" : "" %>
    value="<%= band.id %>"><%= band.name %></option>
    <% end %>
  </selected>
  <% SESSION.each do |ses| %>
    <input type="radio" name="album[session]" value="<%= ses %>"
      <%= album.session == ses ? "checked" : "" %>>
  <% end %>
  <input type="submit">
</form>