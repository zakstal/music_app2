<% destination = ( @band.persisted? ? band_url(@band.id) : bands_url)%>
<% action_to_take = (@band.persisted? ? "PATCH" : "POST" )%>

<form action="<%= bands_url %>" method="POST">
  <input type="hidden" name="_method" value="<%= action_to_take %>">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label for="band_name">Band Name</label>
  <input type="text" name="band[name]" id="band_name" value="<%= @band.name %>">
    <input type="submit" value="Add band">
</form>